<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LandingPad</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Google Web Fonts for Penfolio -->
    <link href="https://fonts.googleapis.com/css?family=Homemade+Apple|Love+Ya+Like+A+Sister|La+Belle+Aurore" rel="stylesheet" />
    <!-- Penfolio layout styling -->
    <link href="~/Content/penfolio.css" rel="stylesheet" />
    <!-- Include Quill stylesheet -->
    <link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet" />
    <style>
        /* Overwrite stuff from the snow stylesheet that messes up the display of the editor */
        #editorContainer {
            display: inline-block;
            background-color: #fff;
        }

        #editorContainer .ql-container {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 18px;
            height: 375px;
        }

        .ql-editor .ql-font-times {
            font-family: 'Times New Roman', Times, serif;
        }

        .ql-editor .ql-font-courier {
            font-family: Courier New, Courier, monospace;
        }

        #editorContainer .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-label[data-value='arial']:not([data-label])::before,
        #editorContainer .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-item[data-value='arial']::before,
        #editorContainer .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-label::before {
            content: 'Arial';
            font-family: Arial, Helvetica, sans-serif;
        }

        #editorContainer .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-label[data-value='times']:not([data-label])::before,
        #editorContainer .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-item[data-value='times']::before,
        #editorContainer .ql-font-times .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-label::before {
            content: 'Times';
            font-family: 'Times New Roman', Times, serif;
        }

        #editorContainer .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-label[data-value='courier']:not([data-label])::before,
        #editorContainer .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-item[data-value='courier']::before,
        #editorContainer .ql-font-courier .ql-toolbar.ql-snow .ql-formats .ql-font.ql-picker .ql-picker-label::before {
            content: 'Courier New';
            font-family: Courier New, Courier, monospace;
        }

        .ql-snow .ql-picker.ql-font {
            width: 125px;
        }
    </style>
</head>
<body>
    @Html.Partial("_NavBar")
    <!--div to hold the background images that are displayed on the right and left sides of the layout-->
    <div class="sideBars">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p><img src="~/Content/SquareOneLogo.png" height="25" hspace="5"> SquareOne&trade; @DateTime.Now.Year</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.7.1/katex.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js" type="text/javascript"></script>
    <!-- Include the Quill library -->
    <script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>
    @RenderSection("editScripts", required: false)
    <!-- Scripts for _WritingPreview -->
    <script src="~/Scripts/writingPreviewScript.js" type="text/javascript"></script>
    <!-- Script to Change Slides in Create and Edit -->
    <script src="~/Scripts/slides.js" type="text/javascript"></script>
    <!-- Script for Loading Format Tags Based on Selected Tags in Create and Edit -->
    <script src="~/Scripts/formatTags.js" type="text/javascript"></script>
    <!-- Script for Loading Genre Tags Based on Selected Tags in Create and Edit -->
    <script src="~/Scripts/genreTags.js" type="text/javascript"></script>
    <!-- Script for Dynamic Permissions Change and Pseudonym Loading in Create and Edit -->
    <script src="~/Scripts/permissions.js" type="text/javascript"></script>
</body>
</html>

