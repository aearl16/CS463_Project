@using Microsoft.AspNet.Identity
@model LandingPad.Models.Twitter

@{
    ViewBag.Title = "Twitter Settings";
}


<!DOCTYPE html>
<html>
<head>
    <title>Twitter Settings</title>
    <meta charset="UTF-8">
</head>
<body>
    <style>
        #logout {
            background-color: #3b5998;
            color: white;
            padding: 10px 10px;
            text-align: center;
            border: none;
            height: 32px;
            padding-bottom: 10px;
        }

        #centerbtn {
            text-align: left;
        }
    </style>
    <h1>LandingPad Social Media Settings</h1>

    <h4>Twitter Connection Status</h4>
    <p>By logging in to Twitter you give LandingPad permission to post on your behalf.</p>
    <p>LandingPad will only post information you want and nothing else.</p>


    @using (Html.BeginForm("TwitterAuth", "Home", FormMethod.Get))
    { <br /> <button class="btn btn-info"
                     type="submit"
                     id="twitter">
        Login to Twitter
    </button>
    }


    @if (Convert.ToDateTime(@ViewBag.EndTime) > DateTime.Now)
    {
        <p>&#x2705; You are currently connected! </p>
    }
    else
    {
        <p>&#10060; You are not currently connected! </p>
    }

    @using (Html.BeginForm("TwitterLogOut", "Home", FormMethod.Get))
    { <br /> <button class="btn btn-info"
                     type="submit"
                     id="twitter">
        Logout of Twitter
    </button>
    }

@if (Convert.ToDateTime(@ViewBag.EndTime) > DateTime.Now)
{
    <br />
    <br />

    <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a>//on local this makes it work? but without it it breaks?

    <a class="twitter-timeline" data-width="800" data-height="400" data-link-color="#19CF86" href="https://twitter.com/@ViewBag.TwitterName/likes">Tweets Liked by </a>

    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script> 
}


</body>

</html>