@model IEnumerable<LandingPad.Models.Writing>
@*@model IEnumerable<LandingPad.Models.Writing>*@

@{
    ViewBag.Title = "Home Page";

}
<body>

    <style>
        #fixedbutton {
        }

        div.lower_menu {
            background: rgba(0, 0, 0, 0.5);
            position: fixed;
            bottom: 0px;
            width: 100%;
            left: 0px;
            vertical-align: middle;
            padding-top: 10px;
            padding-bottom: 10px;
            margin-bottom: auto;
        }
    </style>

    <center>
        <h1>
            Welcome to LandingPad
        </h1>

        <h2>Welcome  Timeline</h2>

        @*?ref_src=twsrc%5Etfw*@

        <a class="twitter-timeline" data-width="600" data-height="300" data-theme="dark" data-link-color="#19CF86" href="https://twitter.com/SquareOne2018">Tweets by SquareOne2018</a>

        @*<h2>Make a Post</h2>*@

        @*<textarea id="my-tweet"> </textarea>
            <br />*@

        <div class="lower_menu">
            <div class="center">
                <button id="fixedbutton" onclick="tweetTweet()">Tweet</button>
            </div>
        </div>

        <script>
            function tweetTweet() {
                var url = "https://twitter.com/intent/tweet";
                //var text = document.getElementById("my-tweet").value;
                var text = "";
                //var hashtags = "hi,hello,testing";
                var via = "";
                window.open(url +
                    "?text=" + text +
                    ";via=" + via,
                    "", "width=500,height=300");
            }
        </script>


        @*<h2>Likes</h2>

            <a class="twitter-timeline" data-width="700" data-height="400" data-theme="dark" data-link-color="#19CF86" href="https://twitter.com/SquareOne2018/likes?ref_src=twsrc%5Etfw">Tweets Liked by SquareOne2018</a>

            <h2>Tweet</h2>

            <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a>*@

        @*<h2> Search </h2>

            <a class="twitter-timeline" href="https://twitter.com/hashtag/dogs" data-widget-id="983163928451493888">#dogs Tweets</a>

            <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>*@

        @*<h2>Lists</h2>

            <a class="twitter-timeline" data-theme="dark" data-link-color="#19CF86" href="https://twitter.com/SquareOne2018/lists/list-number-one?ref_src=twsrc%5Etfw">A Twitter List by SquareOne2018</a>*@

    </center>


    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8">

    </script>

</body>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WritingID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Document)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.AddDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionText)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ProfileID)
            </th>*@
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WritingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Document)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionText)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ProfileID)
                </td>*@
            <td>
                @*<input type="button"
                    @Url.Action("ViewWriting", new { id = item.WritingID, controller = "Writing" })
                    />*@

                <input type="button" value="View" onclick="location.href='@Url.Action("ViewWriting", "Writing", new { id = item.WritingID, controller = "Writing" })'" />

            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
}

