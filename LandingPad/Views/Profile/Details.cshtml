@model LandingPad.DAL.LPProfile

@{
    ViewBag.Title = "Details";
}


@*<h2>@Html.DisplayFor(model => model.LPUser.Username) </h2>*@
@*@Html.DisplayFor(model => model.LPUser.FirstName) @Html.DisplayFor(model => model.LPUser.LastName)*@
<h2 id="Name" style="display:block">
   @Html.DisplayFor(model => model.LPUser.Username)
</h2>

<div>
    <dl class="dl-horizontal">

        <dt>
            Birthday
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LPUser.Birthdate)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LPUser.Email)
        </dd>

        <dt>
            Phone Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LPUser.PhoneNumber)
        </dd>

        <dt>
            Display Real Name
        </dt>

        <dd>

            <input type="checkbox" id="FullName"
            onclick="DisplayFullName()" /> By checking this box, you allow others to view your FULL real name

            @*@Html.DisplayFor(model => model.DisplayRealName)*@

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProfilePhoto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProfilePhoto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Friends)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Friends)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Followers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Followers)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Writers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Writers)
        </dd>

    </dl>
</div>
<p>
    <button>
        @Html.ActionLink("Settings", "Edit", new { id = Model.ProfileID })
    </button> |
    <button>
        @Html.ActionLink("Back", "Index")
    </button>
</p>

<script>
    function DisplayFullName() {
        var checkBox = document.getElementById("FullName");
        var Name = document.getElementById("Name");
        if (checkBox.checked == true) {
            Name.innerHTML = " @Html.DisplayFor(model => model.LPUser.FirstName) @Html.DisplayFor(model => model.LPUser.LastName)";
            Name.style.display = "block";
        } else {
            Name.innerHTML = "@Html.DisplayFor(model => model.LPUser.Username)";
            Name.style.display = "block";
        }
    }

</script>